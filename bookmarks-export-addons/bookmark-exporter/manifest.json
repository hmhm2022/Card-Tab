{
  "manifest_version": 3,
  "name": "Card-Tab Manager",
  "version": "1.0.0",
  "description": "Manage Card-Tab bookmarks: add, delete, import and export",
  "author": "Linux.do user705",
  "homepage_url": "https://github.com/hmhm2022/Card-Tab",
  "permissions": [
    "bookmarks",
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 
